{
  "name": "@repo/db",
  "version": "1.0.0",
  "description": "Shared database entities, schemas, and DTOs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "migration:generate": "typeorm migration:generate -d ./dist/data-source.js",
    "migration:run": "typeorm migration:run -d ./dist/data-source.js",
    "migration:revert": "typeorm migration:revert -d ./dist/data-source.js"
  },
  "dependencies": {
    "@nestjs/config": "^4.0.2",
    "@nestjs/typeorm": "^11.0.0",
    "@repo/config": "workspace:",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "crypto": "^1.0.1",
    "nanoid": "^5.1.6",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "typescript": "^5.9.3"
  }
}